<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="top_app_bar_text">
        <item name="android:textColor">?attr/onPrimaryCC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:layout_marginLeft">@dimen/margin3</item>
        <item name="android:layout_marginRight">@dimen/margin3</item>
        <item name="android:letterSpacing">.03</item>
    </style>

    <style name="top_box">
        <item name="android:textColor">?attr/onSecondaryCC</item>
    </style>
    <style name="top_box.text">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:letterSpacing">.0</item>
    </style>
    <style name="top_box.text.large">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="top_box.value">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:letterSpacing">.02</item>
    </style>
    <style name="top_box.value.large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="card_text">
        <item name="android:textColor">?attr/onCardCC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
    <style name="card_text.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/primaryCC</item>
        <item name="android:padding">@dimen/margin3</item>
    </style>



</resources>