<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.ifsc.expensemonitor.ui.start.WelcomeFragment"
        android:label="welcome_fragment"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcomeFragment_to_signInFragment"
            app:destination="@id/signInFragment" />

        <action
            android:id="@+id/action_welcomeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_expenseListFragment"
            app:destination="@id/expenseListFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_pagerFragment"
            app:destination="@id/pagerFragment" />

    </fragment>

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.ifsc.expensemonitor.ui.start.SigninFragment"
        android:label="sign_in_fragment"
        tools:layout="@layout/fragment_signin">

        <action
            android:id="@+id/action_signInFragment_to_expenseListFragment"
            app:destination="@id/expenseListFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>


    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.ifsc.expensemonitor.ui.start.SignupFragment"
        android:label="sign_up_fragment"
        tools:layout="@layout/fragment_signup">

        <action
            android:id="@+id/action_signUpFragment_to_expenseListFragment"
            app:destination="@id/expenseListFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/expenseListFragment"
        android:name="com.ifsc.expensemonitor.ui.expenselist.ExpenseListFragment"
        android:label="expense_list_fragment"
        tools:layout="@layout/fragment_expense_list">

        <action
            android:id="@+id/action_expenseListFragment_to_monthListFragment"
            app:destination="@id/monthListFragment">
            <argument
                android:name="month"
                app:argType="integer" />
            <argument
                android:name="year"
                app:argType="integer" />
        </action>

        <action
            android:id="@+id/action_expenseListFragment_to_addEditFragment"
            app:destination="@id/addEditFragment">
            <argument
                android:name="month"
                app:argType="integer" />
            <argument
                android:name="year"
                app:argType="integer" />
            <argument
                android:name="key"
                app:argType="string" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/monthListFragment"
        android:name="com.ifsc.expensemonitor.ui.monthlist.MonthListFragment"
        android:label="month_list_fragment"
        tools:layout="@layout/fragment_month_list">

        <argument
            android:name="month"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="year"
            android:defaultValue="-1"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.ifsc.expensemonitor.ui.addedit.AddEditFragment"
        android:label="add_edit_fragment"
        tools:layout="@layout/fragment_add_edit">

        <argument
            android:name="month"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="year"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="key"
            android:defaultValue=""
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/pagerFragment"
        android:name="com.ifsc.expensemonitor.ui.pager.PagerFragment"
        android:label="PagerFragment" />

</navigation>
